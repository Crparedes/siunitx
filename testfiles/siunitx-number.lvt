\input{regression-test}

\RequirePackage{siunitx}

\START
\AUTHOR{Joseph Wright}

\ExplSyntaxOn

\OMIT
\cs_set_protected:Npn \test:n #1
  {
    \siunitx_number_format:nN {#1} \l_tmpa_tl
    \tl_show:N \l_tmpa_tl
  }
\TIMO

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\TEST { Basic~formatting:~integers }
  {
    \test:n { 1 }
    \test:n { 123 }
    \test:n { 123456789 }
    \test:n { 12345678901234567890 }
    \test:n { 00001 }
    \test:n { 00000 }
  }


\TEST { Basic~formatting:~reals }
  {
    \test:n { 1.2 }
    \test:n { 1234.5678 }
    \test:n { .1234 }
    \test:n { 12345. }
  }

\TEST { Basic~formatting:~exponents }
  {
    \test:n { e10 }
    \test:n { e0 }
    \test:n { 1e2 }
    \test:n { 12345e06 }
    \test:n { 12.34e5 }
  }

\TEST { Basic~formatting:~signs }
  {
    \test:n { +e10 }
    \test:n { -1 }
    \test:n { +-10.234 }
    \test:n { 12.34e-5 }
  }

\TEST { Basic~formatting:~uncertainties }
  {
    \test:n { 123(4) }
    \test:n { 123.456(7) }
    \test:n { 123.456(07) }
    \test:n { 123.4(56) }
    \test:n { 123 +- 4 }
    \test:n { 123.456 +- 000.007 }
    \test:n { 123.456 +- 0.007 }
    \test:n { 123.4 +- 5.6 }
  }

\TEST { Basic~formatting:~complex~numbers }
  {
    \test:n { i }
    \test:n { 1i }
    \test:n { 1.234i }
    \test:n { 1.234(5)i }
    \test:n { +1.2ie-3 }
    \test:n { 1.2 +- 3.4i }
    \test:n { i1.234 }
  }

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\TEST { Option~setting~"bracket-negative" }
  {
    \test:n { -1234 }
    \test:n { -12.34 }
    \test:n { -12.34(5) }
    \keys_set:nn { siunitx / number } { bracket-negative = true }
    \test:n { -1234 }
    \test:n { -12.34 }
    \test:n { -12.34(5) }
  }

\TEST { Option~setting~"close-bracket" }
  {
    \keys_set:nn { siunitx / number } { bracket-negative = true }
    \test:n { -1234 }
    \test:n { -12.34 }
    \test:n { -12.34(5) }
    \keys_set:nn { siunitx / number } { close-bracket = ! }
    \test:n { -1234 }
    \test:n { -12.34 }
    \test:n { -12.34(5) }
  }

\TEST { Option~setting~"explicit-plus" }
  {
    \test:n { 1234 }
    \test:n { 1234e5 }
    \keys_set:nn { siunitx / number } { explicit-plus = true }
    \test:n { 1234 }
    \test:n { 1234e5 }
  }

\TEST { Option~setting~"negative-color" }
  {
    \test:n { -1234 }
    \test:n { -12.34 }
    \test:n { -12.34(5) }
    \keys_set:nn { siunitx / number } { negative-color = red }
    \test:n { -1234 }
    \test:n { -12.34 }
    \test:n { -12.34(5) }
  }

\TEST { Option~setting~"open-bracket" }
  {
    \keys_set:nn { siunitx / number } { bracket-negative = true }
    \test:n { -1234 }
    \test:n { -12.34 }
    \test:n { -12.34(5) }
    \keys_set:nn { siunitx / number } { open-bracket = ! }
    \test:n { -1234 }
    \test:n { -12.34 }
    \test:n { -12.34(5) }
  }

\TEST { Option~setting~"tight-spacing" }
  {
    \test:n { -1234 }
    \test:n { -1234e-5 }
    \test:n { -1234e-5 }
    \keys_set:nn { siunitx / number } { tight-spacing = true }
    \test:n { -1234 }
    \test:n { -1234e-5 }
    \test:n { -1234e-5 }
  }

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\TEST { Option~settings~"bracket-negative"~and~"negative-color" }
  {
    \test:n { -1234 }
    \test:n { -12.34 }
    \test:n { -12.34(5) }
    \keys_set:nn { siunitx / number }
      { bracket-negative = true , negative-color = red }
    \test:n { -1234 }
    \test:n { -12.34 }
    \test:n { -12.34(5) }
  }

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\TEST { Invalid~tokens }
  {
    \test:n { 1a }
    \test:n { 1eH }
  }

\TEST { Misplaced~tokens }
  {
    \test:n { -- }
    \test:n { 1.2.3 }
    \test:n { i4i }
    \test:n { e2-4 }
    \test:n { 1.23(4 }
  }

\END