\input{regression-test}

\RequirePackage[enable-debug,check-declarations]{expl3}

\ExplSyntaxOn
\debug_on:n { deprecation }
\ExplSyntaxOff

\RequirePackage{siunitx}

\START

\ExplSyntaxOn

\OMIT
\cs_set_protected:Npn \test:n #1
  {
    \siunitx_number_format:nN {#1} \l_tmpa_tl
    \tl_show:N \l_tmpa_tl
  }
\TIMO

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\TEST { Basic~formatting:~integers }
  {
    \test:n { 1 }
    \test:n { 123 }
    \test:n { 123456789 }
    \test:n { 12345678901234567890 }
    \test:n { 00001 }
    \test:n { 00000 }
  }

\TEST { Basic~formatting:~reals }
  {
    \test:n { 1.2 }
    \test:n { 1234.5678 }
    \test:n { .1234 }
    \test:n { 12345. }
  }

\TEST { Basic~formatting:~exponents }
  {
    \test:n { e10 }
    \test:n { e0 }
    \test:n { 1e2 }
    \test:n { 12345e06 }
    \test:n { 12.34e5 }
  }

\TEST { Basic~formatting:~signs }
  {
    \test:n { +e10 }
    \test:n { -1 }
    \test:n { +-10.234 }
    \test:n { 12.34e-5 }
  }

\TEST { Basic~formatting:~uncertainties }
  {
    \test:n { 123(4) }
    \test:n { 123.456(7) }
    \test:n { 123.456(07) }
    \test:n { 123.456(70) }
    \test:n { 123.4(56) }
    \test:n { 123 +- 4 }
    \test:n { 123.456 +- 000.007 }
    \test:n { 123.456 +- 0.007 }
    \test:n { 123.456 +- 0.070 }
    \test:n { 123.4 +- 5.6 }
    \test:n { 123.4 +- 5.678 }
  }

\TEST { Basic~formatting:~complex~numbers }
  {
    \test:n { i }
    \test:n { 1i }
    \test:n { 1.234i }
    \test:n { 1.234(5)i }
    \test:n { +1.2ie-3 }
    \test:n { 1.2 +- 3.4i }
    \test:n { i1.234 }
  }

\TEST { Basic~formatting:~comparators }
  {
    \test:n { > 1.2 }
    \test:n { \le + 1234.5678 }
    \test:n { >> 5 }
  }

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\OMIT
\cs_set_protected:Npn \test:n #1
  {
    \siunitx_number_format:nNN {#1} \l_tmpa_tl &
    \tl_show:N \l_tmpa_tl
  }
\TIMO

\TEST { Formatting~for~tabular~alignment }
  {
    \test:n { >10 }
    \test:n { 123 }
    \test:n { 123.456 }
    \test:n { 123.456(789) }
    \group_begin:
      \keys_set:nn { siunitx } { separate-uncertainty = true }
      \test:n { 123.456 \pm 0.789 }
    \group_end:
    \test:n { 123e10 }
    \test:n { +1 }
    \test:n { e11 }
    \test:n { -e11 }
  }

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\OMIT
\cs_set_protected:Npn \test:n #1
  {
    \siunitx_number_format:nN {#1} \l_tmpa_tl
    \tl_show:N \l_tmpa_tl
  }
\TIMO

\TEST { Option~setting~"bracket-negative" }
  {
    \test:n { -1234 }
    \test:n { -12.34 }
    \test:n { -12.34(5) }
    \keys_set:nn { siunitx } { bracket-negative = true }
    \test:n { -1234 }
    \test:n { -12.34 }
    \test:n { -12.34(5) }
  }

\TEST { Option~setting~"evaluate-expression" }
  {
    \test:n { 1.5 * 1.5 }
    \keys_set:nn { siunitx } { evaluate-expression = true }
    \test:n { 1.5 * 1.5 }
  }

\TEST { Option~setting~"explicit-plus" }
  {
    \test:n { 1234 }
    \test:n { 1234e5 }
    \keys_set:nn { siunitx } { explicit-plus = true }
    \test:n { 1234 }
    \test:n { 1234e5 }
  }

\TEST { Option~setting~"exponent-base" }
  {
    \test:n { 1234e5 }
    \test:n { 1234e-5 }
    \keys_set:nn { siunitx } { exponent-base = 2 }
    \test:n { 1234e5 }
    \test:n { 1234e-5 }
  }

\TEST { Option~setting~"exponent-product" }
  {
    \test:n { 1234e5 }
    \test:n { 1234e-5 }
    \keys_set:nn { siunitx } { exponent-product = \cdot }
    \test:n { 1234e5 }
    \test:n { 1234e-5 }
  }

\TEST { Option~setting~"expression" }
  {
    \OMIT
    \keys_set:nn { siunitx } { evaluate-expression = true }
    \TIMO
    \test:n { 1.5 * 1.5 }
    \keys_set:nn { siunitx } { expression = 100 * (#1) }
    \test:n { 1.5 * 1.5 }
  }

\TEST { Option~setting~"group-digits" }
  {
    \test:n { 1234.5678 }
    \test:n { 12345.67890 }
    \test:n { 1234.567890 }
    \test:n { 1e12345 }
    \keys_set:nn { siunitx } { group-digits = integer }
    \test:n { 1234.5678 }
    \test:n { 12345.67890 }
    \test:n { 1234.567890 }
    \test:n { 1e12345 }
    \keys_set:nn { siunitx } { group-digits = decimal }
    \test:n { 1234.5678 }
    \test:n { 12345.67890 }
    \test:n { 1234.567890 }
    \test:n { 1e12345 }
    \keys_set:nn { siunitx } { group-digits = none }
    \test:n { 1234.5678 }
    \test:n { 12345.67890 }
    \test:n { 1234.567890 }
    \test:n { 1e12345 }
  }

\TEST { Option~setting~"group-minimum-digits" }
  {
    \test:n { 1234.5678 }
    \test:n { 12345.67890 }
    \test:n { 1e1234 }
    \keys_set:nn { siunitx } { group-minimum-digits = 5 }
    \test:n { 1234.5678 }
    \test:n { 12345.67890 }
    \test:n { 1e1234 }
  }

\TEST { Option~setting~"group-separator" }
  {
    \test:n { 1234.5678 }
    \test:n { 12345.67890 }
    \test:n { 1e12345 }
    \keys_set:nn { siunitx } { group-separator = { , } }
    \test:n { 1234.5678 }
    \test:n { 12345.67890 }
    \test:n { 1e12345 }
  }

\TEST { Option~setting~"input-close-uncertainty" }
  {
    \test:n { 12.34 }
    \test:n { 12.34(5) }
    \keys_set:nn { siunitx } { input-close-uncertainty = }
    \test:n { 12.34 }
    \test:n { 12.34(5) }
  }

\TEST { Option~setting~"input-comparators" }
  {
    \test:n { 12.34 }
    \test:n { >12.34 }
    \keys_set:nn { siunitx } { input-comparators = }
    \test:n { 12.34 }
    \test:n { >12.34 }
  }

\TEST { Option~setting~"input-complex-roots" }
  {
    \test:n { 12.34 }
    \test:n { 12.34i }
    \keys_set:nn { siunitx } { input-complex-roots = }
    \test:n { 12.34 }
    \test:n { 12.34i }
  }

\TEST { Option~setting~"input-decimal-markers" }
  {
    \test:n { 1234 }
    \test:n { 12.34 }
    \keys_set:nn { siunitx } { input-decimal-markers = }
    \test:n { 1234 }
    \test:n { 12.34 }
  }

\TEST { Option~setting~"input-digits" }
  {
    \test:n { 1234 }
    \test:n { 5678 }
    \keys_set:nn { siunitx } { input-digits = 01234 }
    \test:n { 1234 }
    \test:n { 5678 }
  }

\TEST { Option~setting~"input-exponent-markers" }
  {
    \test:n { 1234 }
    \test:n { 1234e4 }
    \keys_set:nn { siunitx } { input-exponent-markers = }
    \test:n { 1234 }
    \test:n { 1234e4 }
  }

\TEST { Option~setting~"input-open-uncertainty" }
  {
    \test:n { 12.34 }
    \test:n { 12.34(5) }
    \keys_set:nn { siunitx } { input-open-uncertainty = }
    \test:n { 12.34 }
    \test:n { 12.34(5) }
  }

\TEST { Option~setting~"input-signs" }
  {
    \test:n { 1234 }
    \test:n { +1234 }
    \keys_set:nn { siunitx } { input-signs = }
    \test:n { 1234 }
    \test:n { +1234 }
  }

\TEST { Option~setting~"input-uncertainty-signs" }
  {
    \test:n { 12.34 }
    \test:n { 12.34 \pm 5 }
    \keys_set:nn { siunitx } { input-uncertainty-signs = }
    \test:n { 12.34 }
    \test:n { 12.34 \pm 5 }
  }

\TEST { Option~setting~"negative-color" }
  {
    \test:n { -1234 }
    \test:n { -12.34 }
    \test:n { -12.34(5) }
    \keys_set:nn { siunitx } { negative-color = red }
    \test:n { -1234 }
    \test:n { -12.34 }
    \test:n { -12.34(5) }
  }

\TEST { Option~setting~"number-close-bracket" }
  {
    \keys_set:nn { siunitx } { bracket-negative = true }
    \test:n { -1234 }
    \test:n { -12.34 }
    \test:n { -12.34(5) }
    \keys_set:nn { siunitx } { number-close-bracket = ! }
    \test:n { -1234 }
    \test:n { -12.34 }
    \test:n { -12.34(5) }
  }

\TEST { Option~setting~"number-open-bracket" }
  {
    \keys_set:nn { siunitx } { bracket-negative = true }
    \test:n { -1234 }
    \test:n { -12.34 }
    \test:n { -12.34(5) }
    \keys_set:nn { siunitx } { number-open-bracket = ! }
    \test:n { -1234 }
    \test:n { -12.34 }
    \test:n { -12.34(5) }
  }

\TEST { Option~setting~"separate-uncertainty" }
  {
    \test:n { 1234(5) }
    \test:n { 12.34(5) }
    \test:n { 12.3456(12345) }
    \test:n { 12.34567(12345) }
    \test:n { 1234567(12345) }
    \test:n { 1234(5)e6 }
    \keys_set:nn { siunitx } { separate-uncertainty = true }
    \test:n { 1234(5) }
    \test:n { 12.34(5) }
    \test:n { 12.3456(12345) }
    \test:n { 12.34567(12345) }
    \test:n { 1234567(12345) }
    \test:n { 1234(5)e6 }
  }

\TEST { Option~setting~"tight-spacing" }
  {
    \test:n { -1234 }
    \test:n { -1234e-5 }
    \test:n { -1234e-5 }
    \keys_set:nn { siunitx } { tight-spacing = true }
    \test:n { -1234 }
    \test:n { -1234e-5 }
    \test:n { -1234e-5 }
  }

\TEST { Option~setting~"unity-mantissa" }
  {
    \test:n { 1e10 }
    \test:n { 1e0 }
    \keys_set:nn { siunitx } { unity-mantissa = true }
    \test:n { 1e10 }
    \test:n { 1e0 }
  }

\TEST { Option~setting~"zero-exponent" }
  {
    \test:n { 1234e0 }
    \test:n { 1234e-0 }
    \keys_set:nn { siunitx } { zero-exponent = true }
    \test:n { 1234e0 }
    \test:n { 1234e-0 }
  }

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\TEST { Option~settings~"bracket-negative"~and~"negative-color" }
  {
    \test:n { -1234 }
    \test:n { -12.34 }
    \test:n { -12.34(5) }
    \keys_set:nn { siunitx }
      { bracket-negative = true , negative-color = red }
    \test:n { -1234 }
    \test:n { -12.34 }
    \test:n { -12.34(5) }
  }

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\TEST { Invalid~tokens }
  {
    \test:n { 1a }
    \test:n { 1eH }
  }

\TEST { Misplaced~tokens }
  {
    \test:n { -- }
    \test:n { 1.2.3 }
    \test:n { i4i }
    \test:n { e2-4 }
    \test:n { 1.23(4 }
  }

\TEST { Overlong~uncertainty }
  {
    \test:n { 123 +- 4567 }
  }

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\TEST { Testing~entire~numbers }
  {
    \siunitx_if_number:nTF { 1 }       { \TRUE }  { \ERROR }
    \siunitx_if_number:nTF { +0.1 }    { \TRUE }  { \ERROR }
    \siunitx_if_number:nTF { e10 }     { \TRUE }  { \ERROR }
    \siunitx_if_number:nTF { 1 + ( ) } { \ERROR } { \FALSE }
  }

\TEST { Testing~individual~tokens }
  {
    \siunitx_if_number_token:NTF 1   { \TRUE }  { \ERROR }
    \siunitx_if_number_token:NTF +   { \TRUE }  { \ERROR }
    \siunitx_if_number_token:NTF \pm { \TRUE }  { \ERROR }
    \siunitx_if_number_token:NTF H   { \ERROR } { \FALSE }
  }

\END
