\input{regression-test}

\documentclass{article}

\usepackage{siunitx}

\begin{document}

\START

\ExplSyntaxOn

\OMIT
\cs_set_protected:Npn \test:nn #1#2
  {
    \hbox_set:Nn \l_tmpa_box { \siunitx_print:nn {#1} {#2} }
    \box_show:N \l_tmpa_box
    \hbox_set:Nn \l_tmpa_box { $ \siunitx_print:nn {#1} {#2} $ }
    \box_show:N \l_tmpa_box
    \group_begin:
      \keys_set:nn { siunitx / print } { mode = text }
      \hbox_set:Nn \l_tmpa_box { \siunitx_print:nn {#1} {#2} }
      \box_show:N \l_tmpa_box
      \hbox_set:Nn \l_tmpa_box { $ \siunitx_print:nn {#1} {#2} $ }
      \box_show:N \l_tmpa_box
    \group_end:
  }
\TIMO

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\TEST { Printing~numbers }
  {
      \test:nn { number } { 123\,456 }
  }

\TEST { Printing~units }
  {
      \test:nn { unit } { \mathrm {J}\,\mathrm {mol}^{-1}\,\mathrm {K}^{-1} }
  }

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\TEST { Option~setting~"color" }
  {
    \group_begin:
      \keys_set:nn { siunitx / print } { color = red }
      \test:nn { unit } { \mathrm{kg} }
      \keys_set:nn { siunitx / print } { color =  }
      \test:nn { unit } { \mathrm{kg} }
    \group_end:
  }

\TEST { Option~setting~"control-family" }
  {
    \test:nn { unit } { \mathrm{kg} }
    \group_begin:
      \sffamily
      \test:nn { unit } { \mathrm{kg} }
    \group_end:
    \keys_set:nn { siunitx / print } { control-family = false }
    \test:nn { unit } { \mathrm{kg} }
    \group_begin:
      \sffamily
      \test:nn { unit } { \mathrm{kg} }
    \group_end:
  }

\TEST { Option~setting~"control-shape" }
  {
    \test:nn { unit } { \mathrm{kg} }
    \group_begin:
      \itshape
      \test:nn { unit } { \mathrm{kg} }
    \group_end:
    \keys_set:nn { siunitx / print } { control-shape = false }
    \test:nn { unit } { \mathrm{kg} }
    \group_begin:
      \itshape
      \test:nn { unit } { \mathrm{kg} }
    \group_end:
  }

\TEST { Option~setting~"control-weight" }
  {
    \test:nn { unit } { \mathrm{kg} }
    \group_begin:
      \bfseries
      \test:nn { unit } { \mathrm{kg} }
    \group_end:
    \group_begin:
      \boldmath
      \test:nn { unit } { \mathrm{kg} }
    \group_end:
    \keys_set:nn { siunitx / print } { control-weight = false }
    \test:nn { unit } { \mathrm{kg} }
    \group_begin:
      \boldmath
      \test:nn { unit } { \mathrm{kg} }
    \group_end:
    \group_begin:
      \bfseries
      \test:nn { unit } { \mathrm{kg} }
    \group_end:
  }

\TEST { Option~setting~"mode" }
  {
    \group_begin:
      \test:nn { unit } { \mathrm{kg} }
      \keys_set:nn { siunitx / print } { mode = math }
      \test:nn { unit } { \mathrm{kg} }
      \keys_set:nn { siunitx / print } { mode = text }
      \test:nn { unit } { \mathrm{kg} }
    \group_end:
  }

\end{document}
