\input{regression-test}

\documentclass{article}

\usepackage{siunitx}

\begin{document}

\START

\ExplSyntaxOn

\OMIT
\cs_set_protected:Npn \test:nn #1#2
  {
    \hbox_set:Nn \l_tmpa_box { \siunitx_print:nn {#1} {#2} }
    \box_show:N \l_tmpa_box
    \hbox_set:Nn \l_tmpa_box { $ \siunitx_print:nn {#1} {#2} $ }
    \box_show:N \l_tmpa_box
    \group_begin:
      \keys_set:nn { siunitx / print } { mode = text }
      \hbox_set:Nn \l_tmpa_box { \siunitx_print:nn {#1} {#2} }
      \box_show:N \l_tmpa_box
      \hbox_set:Nn \l_tmpa_box { $ \siunitx_print:nn {#1} {#2} $ }
      \box_show:N \l_tmpa_box
    \group_end:
  }
\TIMO

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\TEST { Printing~numbers }
  {
    \test:nn { number } { 123\,456 }
  }

\TEST { Printing~units }
  {
    \test:nn { unit } { \mathrm {J}\,\mathrm {mol}^{-1}\,\mathrm {K}^{-1} }
  }

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\TEST { Option~setting~"color" }
  {
    \group_begin:
      \keys_set:nn { siunitx / print } { color = red }
      \test:nn { unit } { \mathrm{kg} }
      \keys_set:nn { siunitx / print } { color =  }
      \test:nn { unit } { \mathrm{kg} }
    \group_end:
    \group_begin:
      \keys_set:nn { siunitx / print } { number-color = red }
      \test:nn { number } { 123 }
      \test:nn { unit } { \mathrm{kg} }
    \group_end:
    \group_begin:
      \keys_set:nn { siunitx / print } { unit-color = red }
      \test:nn { number } { 123 }
      \test:nn { unit } { \mathrm{kg} }
    \group_end:
  }

\TEST { Option~setting~"control-math-font" }
  {
    \hbox_set:Nn \l_tmpa_box
      { $ \mathsf { \siunitx_print:nn { number } { 123 } } $ }
    \box_show:N \l_tmpa_box
    \hbox_set:Nn \l_tmpa_box
      { $ \mathsf { \siunitx_print:nn { unit } { \mathrm{kg} } } $ }
    \box_show:N \l_tmpa_box
    \keys_set:nn { siunitx / print } { control-math-font = false }
    \hbox_set:Nn \l_tmpa_box
      { $ \mathsf { \siunitx_print:nn { number } { 123 } } $ }
    \box_show:N \l_tmpa_box
    \hbox_set:Nn \l_tmpa_box
      { $ \mathsf { \siunitx_print:nn { unit } { \mathrm{kg} } } $ }
    \box_show:N \l_tmpa_box
  }

\TEST { Option~setting~"control-math-version" }
  {
    \group_begin:
      \boldmath
      \test:nn { unit } { \mathrm{kg} }
    \group_end:
    \keys_set:nn { siunitx / print } { control-math-version = false }
    \group_begin:
      \boldmath
      \test:nn { unit } { \mathrm{kg} }
    \group_end:
  }

\TEST { Option~setting~"control-text-family" }
  {
    \group_begin:
      \sffamily
      \test:nn { unit } { \mathrm{kg} }
    \group_end:
    \keys_set:nn { siunitx / print } { control-text-family = false }
    \group_begin:
      \sffamily
      \test:nn { unit } { \mathrm{kg} }
    \group_end:
  }

\TEST { Option~setting~"control-text-series" }
  {
    \group_begin:
      \bfseries
      \test:nn { unit } { \mathrm{kg} }
    \group_end:
    \keys_set:nn { siunitx / print } { control-text-series = false }
    \group_begin:
      \bfseries
      \test:nn { unit } { \mathrm{kg} }
    \group_end:
  }

\TEST { Option~setting~"control-text-shape" }
  {
    \group_begin:
      \itshape
      \test:nn { unit } { \mathrm{kg} }
    \group_end:
    \keys_set:nn { siunitx / print } { control-text-shape = false }
    \group_begin:
      \itshape
      \test:nn { unit } { \mathrm{kg} }
    \group_end:
  }

\TEST { Option~setting~"mode" }
  {
    \group_begin:
      \test:nn { unit } { \mathrm{kg} }
      \keys_set:nn { siunitx / print } { mode = math }
      \test:nn { unit } { \mathrm{kg} }
      \keys_set:nn { siunitx / print } { mode = text }
      \test:nn { unit } { \mathrm{kg} }
      \keys_set:nn { siunitx / print } { mode = match }
      \test:nn { unit } { \mathrm{kg} }
    \group_end:
    \group_begin:
      \keys_set:nn { siunitx / print } { number-mode = math }
      \test:nn { number } { 123 }
      \test:nn { unit } { \mathrm{kg} }
      \keys_set:nn { siunitx / print } { number-mode = text }
      \test:nn { number } { 123 }
      \test:nn { unit } { \mathrm{kg} }
      \keys_set:nn { siunitx / print } { number-mode = match }
      \test:nn { number } { 123 }
      \test:nn { unit } { \mathrm{kg} }
    \group_end:
    \group_begin:
      \keys_set:nn { siunitx / print } { unit-mode = math }
      \test:nn { number } { 123 }
      \test:nn { unit } { \mathrm{kg} }
      \keys_set:nn { siunitx / print } { unit-mode = text }
      \test:nn { number } { 123 }
      \test:nn { unit } { \mathrm{kg} }
      \keys_set:nn { siunitx / print } { unit-mode = match }
      \test:nn { number } { 123 }
      \test:nn { unit } { \mathrm{kg} }
    \group_end:
  }

\TEST { Option~setting~"unit-font-command" }
  {
    \keys_set:nn { siunitx / print } { font-command = \mathsf }
    \test:nn { unit } { \mathsf{kg} }
  }

\end{document}
