\input{regression-test}

\RequirePackage{siunitx}

\START
\AUTHOR{Joseph Wright}

\ExplSyntaxOn

\OMIT
\cs_set_protected:Npn \test:n #1
  {
    \siunitx_unit_format:nN {#1} \l_tmpa_tl
    \tl_show:N \l_tmpa_tl
  }
\TIMO

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\OMIT
  \char_set_catcode_active:N \~
  \cs_set_eq:NN ~ \c_space_tl
  \tl_set:Nn \l_tmpb_tl { J ~  mol ^ { -1 } ~ K  ^ { -1 } }
  \char_set_catcode_space:N \~
\TIMO

\TEST { Basic~unit~formatting }
  {
    \siunitx_unit_format:nN { \joule \per \mole \per \kelvin } \l_tmpa_tl
    \tl_show:N \l_tmpa_tl
    \siunitx_unit_format:nN { J . mol ^ { -1 } . K  ^ { -1 } } \l_tmpa_tl
    \tl_show:N \l_tmpa_tl
    \exp_args:NV \siunitx_unit_format:nN \l_tmpb_tl \l_tmpa_tl
    \tl_show:N \l_tmpa_tl
    \siunitx_unit_format:nN { \joule . mol ^ { -1 } . K  ^ { -1 } } \l_tmpa_tl
    \tl_show:N \l_tmpa_tl
  }

\TEST { Unit~formatting~with~prefix~conversion }
  {
    \siunitx_unit_format:nNN { \joule \per \mole \per \kelvin }
      \l_tmpa_tl \l_tmpa_fp
    \tl_show:N \l_tmpa_tl
    \fp_show:N \l_tmpa_fp
    \siunitx_unit_format:nNN { \kilo \metre }
      \l_tmpa_tl \l_tmpa_fp
    \tl_show:N \l_tmpa_tl
    \fp_show:N \l_tmpa_fp
    \siunitx_unit_format:nNN { \kilo \metre \per \kilo \gram }
      \l_tmpa_tl \l_tmpa_fp
    \tl_show:N \l_tmpa_tl
    \fp_show:N \l_tmpa_fp
    \siunitx_unit_format:nNN { \kilo \metre \per \second \per \micro \ampere }
      \l_tmpa_tl \l_tmpa_fp
    \tl_show:N \l_tmpa_tl
    \fp_show:N \l_tmpa_fp
    \siunitx_unit_format:nNN { \square \kilo \metre }
      \l_tmpa_tl \l_tmpa_fp
    \tl_show:N \l_tmpa_tl
    \fp_show:N \l_tmpa_fp
    \siunitx_unit_format:nNN { \kilo \metre \tothe { 0.5 } }
      \l_tmpa_tl \l_tmpa_fp
    \tl_show:N \l_tmpa_tl
    \fp_show:N \l_tmpa_fp
  }

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\TEST { Creating~units }
  {
    \siunitx_unit_set:Nn \molar { M }
    \test:n { \molar }
    \siunitx_unit_set:Nn \molar { \textsc { M } }
    \test:n { \molar }
  }

\TEST { Creating~prefixes }
  {
    \siunitx_unit_prefix_set:Nn \myprefix { Y }
    \test:n { \myprefix \metre }
    \test:n { \per \myprefix \metre }
    \siunitx_unit_prefix_set:Nnn \myprefix { X } { 11 }
    \test:n { \myprefix \metre }
    \test:n { \per \myprefix \metre }
  }

\TEST { Creating~powers }
  {
    \siunitx_unit_power_set:NnN \quartic { 4 } \c_true_bool
    \test:n { \quartic \metre }
    \test:n { \per \quartic \metre }
    \siunitx_unit_power_set:NnN \quartic { 4 } \c_false_bool
    \test:n { \metre \quartic }
    \test:n { \per \metre \quartic }
  }

\TEST { Creating~qualifiers }
  {
    \siunitx_unit_qualifier_set:Nn \polymer { polymer }
    \test:n { \mole \of { catalyst } \per \gram \polymer }
  }

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\TEST { Base~units }
  {
    \clist_map_inline:nn
      {
        \kilogram ,
        \metre    ,
        \meter    ,
        \mole     ,
        \kelvin   ,
        \candela  ,
        \second   ,
        \ampere
      }
      {
        \test:n {#1}
      }
  }

\TEST { Gram }
  {
    \clist_map_inline:nn
      {
        \gram
      }
      {
        \test:n {#1}
      }
  }

\TEST { Prefixes~(using~metre~as~unit) }
  {
    \clist_map_inline:nn
      {
        \yocto ,
        \zepto ,
        \atto  ,
        \femto ,
        \pico  ,
        \nano  ,
        \micro ,
        \milli ,
        \centi ,
        \deci  ,
        \deca  ,
        \deka  ,
        \hecto ,
        \kilo  ,
        \mega  ,
        \giga  ,
        \tera  ,
        \peta  ,
        \exa   ,
        \zetta ,
        \yotta
      }
      {
        \test:n { #1 \metre }
      }
  }

\TEST { Defined~units }
  {
    \clist_map_inline:nn
      {
        \becquerel     ,
        \degreeCelsius ,
        \coulomb       ,
        \farad         ,
        \gray          ,
        \hertz         ,
        \henry         ,
        \joule         ,
        \katal         ,
        \lumen         ,
        \lux           ,
        \newton        ,
        \ohm           ,
        \pascal        ,
        \radian        ,
        \siemens       ,
        \sievert       ,
        \steradian     ,
        \tesla         ,
        \volt          ,
        \watt          ,
        \weber
      }
      {
        \test:n {#1}
      }
  }

\TEST { Accepted~units }
  {
    \clist_map_inline:nn
      {
        \day       ,
        \hectare   ,
        \hour      ,
        \litre     ,
        \liter     ,
        \minute    ,
        \tonne
      }
      {
        \test:n {#1}
      }
  }

\TEST { Units~of~plane~angles }
  {
    \clist_map_inline:nn
      {
        \arcminute ,
        \arcsecond ,
        \degree
      }
      {
        \test:n {#1}
      }
  }

\TEST { Units~based~on~physical~measurements }
  {
    \clist_map_inline:nn
      {
        \astronomicalunit ,
        \atomicmassunit   ,
        \dalton           ,
        \electronvolt     ,
        \nuaction         ,
        \numass           ,
        \nuspeed          ,
        \nutime           ,
        \auaction         ,
        \aucharge         ,
        \auenergy         ,
        \aulength         ,
        \aumass           ,
        \autime           ,
        \bohr             ,
        \hartree
      }
      {
        \test:n {#1}
      }
  }

\TEST { Accepted~units }
  {
    \clist_map_inline:nn
      {
        \angstrom          ,
        \bar               ,
        \barn              ,
        \bel               ,
        \decibel           ,
        \knot              ,
        \millimetremercury ,
        \nauticalmile      ,
        \neper
      }
      {
        \test:n {#1}
      }
  }

\TEST { CGS~units }
  {
    \clist_map_inline:nn
      {
        \dyne    ,
        \erg     ,
        \gal     ,
        \gauss   ,
        \maxwell ,
        \oersted ,
        \phot    ,
        \poise   ,
        \stilb   ,
        \stokes
      }
      {
        \test:n {#1}
      }
  }

\TEST { Pre-defined~powers~of~units }
  {
    \clist_map_inline:nn
      {
        \square ,
        \cubic
      }
      {
        \test:n { #1 \metre }
      }
    \clist_map_inline:nn
      {
        \squared ,
        \cubed
      }
      {
        \test:n { \metre #1 }
      }
  }

\TEST { Reciprocal~units }
  {
    \clist_map_inline:nn
      {
        \per \metre                      ,
        \metre \per \second              ,
        \per \square \metre              ,
        \per \metre \squared             ,
        \joule \per \mole \per \kelvin   ,
        \per \metre \second \per \ampere
      }
      {
        \test:n { #1 }
      }
  }

\TEST { Arbitrary~unit~powers }
  {
    \clist_map_inline:nn
      {
        \raiseto { 4 }   \metre      ,
        \raiseto { 3.5 } \metre      ,
        \per \raiseto { 4 }   \metre ,
        \per \raiseto { 3.5 } \metre ,
        \metre \tothe { 4 }          ,
        \metre \tothe { 3.5 }        ,
        \per \metre \tothe { 4 }     ,
        \per \metre \tothe { 3.5 }
      }
      {
        \test:n { #1 }
      }
  }

\TEST { Arbitrary~qualifies }
  {
    \test:n { \mole \of { catalyst } \per \gram \of { polymer } }
  }

\TEST { Highlighting~and~cancelling }
  {
    \test:n { \joule \cancel \per \mole \per \kelvin }
    \test:n { \joule \highlight { blue } \per \mole \per \kelvin }
  }

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\TEST { Selecting~font~directly }
  {
    \test:n { \joule \per \mole \per \kelvin }
    \tl_set:Nn \l_siunitx_unit_font_tl { \mathit }
    \test:n { \joule \per \mole \per \kelvin }
    \tl_set:Nn \l_siunitx_unit_font_tl { \textrm }
    \test:n { \joule \per \mole \per \kelvin }
  }

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\TEST { Option~setting~"font-command" }
  {
    \test:n { \joule \per \mole \per \kelvin }
    \keys_set:nn { siunitx / unit } { font-command = \mathit }
    \test:n { \joule \per \mole \per \kelvin }
    \keys_set:nn { siunitx / unit } { font-command = \textrm }
    \test:n { \joule \per \mole \per \kelvin }
  }

\END